<!DOCTYPE html>
<html>
  <%= render 'layouts/header' %>

  <body>
    <%= render 'layouts/navbar' %>

    <section class="section">
      <div class="container">

        <div id="flash" >
          <% flash.each do |key, value| %>
            <div class="flash <%= key %> notification is-error"><%= value %></div>
          <% end %>
        </div>

        <%= yield %>
        
      </div>
    </section>
  </body>

  <%= render 'layouts/footer' %>
</html>
